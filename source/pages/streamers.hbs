---
layout: horizontal
---

<div class="page-heading page-heading--loop bg-image bg--ph-02">
	<div class="page-heading__subtitle h5 color-primary">ManedWolfs</div>
	<h1 class="page-heading__title h2">Nossos </br>Streamers</h1>
</div>
<div class="content staff-layout">

	{{#each content.streamers}}
	<article class="staff-member has-post-thumbnail">
		<div class="staff-member__thumbnail">
			<a href="staff-member.html"><img src="{{img}}" alt="{{title}}"></a>
		</div>
		<div class="staff-member__body">
			<div class="staff-member__position">{{position}}</div>
			<h2 class="staff-member__title h3"><a href="staff-member.html">{{title}}</a></h2>
			<ul class="staff-member__meta list-unstyled">
				<li class="staff-member__meta-item"><span>Idade</span>{{age}} years</li>
				<li class="staff-member__meta-item"><span>Ingressou</span>{{joined}}</li>
				<li class="staff-member__meta-item"><span>Pa√≠s</span>{{country}}</li>
				<li class="staff-member__meta-item"><span>Estado</span>{{state}}</li>
			</ul>
			<div class="staff-member__excerpt">{{excerpt}}</div>
			<ul class="social-menu social-menu--links">
				{{#each socials}}
				<li><a href="{{link}}"></a></li>
				{{/each}}
			</ul>
		</div>
	</article>
	{{/each}}

</div>
